
<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../head %>
</head>
<body>

  <!-- INCLUI A NAVBAR -->
  <% include ../navbar %>

  <div class="container">
  <h2>Editar Fatura</h2>
    <% data.forEach(function(details) { %>
      <form action="/editar/<%= details._id %>" method="POST">
        <div class="form-group">

          <div class="form-group">
              <label for="nome">Nome:</label>
              <input type="text" id="nome" class="form-control" value="<%= details.name %>" name="name">
          </div>

          <div class="form-group">
            <label for="sobrenome">Sobrenome:</label>
            <input type="text" class="form-control" value="<%= details.surname %>" name="surname">
          </div>
          
          <button class="btn btn-secondary" type="submit">Alterar</button>
          <a class="btn btn-primary" href="/">Cancelar</a>   
        </div>
      </form>
    <% }) %>
  </div>
</body>
</html>